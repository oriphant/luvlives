<!DOCTYPE html>
<html>
<head>
  <title>Luvlives</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
<!-- ~~~~ Nav Bar - Start ~~~~ -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <!-- Not sure what this does -->
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <!-- ~~~~ ~~~~ -->
        <% if current_user %>
          <a><%= link_to image_tag("LuvLives-Logo-Final.png"), questions_path%></a>
        <%else%>
          <a><%= link_to image_tag("LuvLives-Logo-Final.png"), root_path%></a>
        <%end%>
      </div>

      <div class="collapse navbar-collapse">
        <!-- Search Box - Start -->
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search Questions">
          </div>
          <button type="submit" class="btn btn-default">Search</button>
        </form>
        <!-- Search Box - End -->
        <ul class="nav navbar-nav navbar-right">
          
          <li><%= link_to "Ask", new_question_path %></li>
          <li><%= link_to "Read", questions_path %></li>

          <% if current_user %>
            <li class = "explore pull-right">
            <%= link_to "#{(current_user.email)}"'<b class="caret"></b>'.html_safe, root_path, :id => 'setupdrop', :'data-toggle' => 'dropdown', :class => 'dropdown-toggle'%>
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                  <li class="dropdown-link"><%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></li>
                </ul>
            </li>
          <% else %>
            <li class = "explore pull-right">
            <%= link_to 'Guest <b class="caret"></b>'.html_safe, root_path, :id => 'setupdrop', :'data-toggle' => 'dropdown', :class => 'dropdown-toggle' %>
                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                  <li class="dropdown-link"><%= link_to "Sign In", new_user_session_path %></li>
                  <li class="dropdown-link"><%= link_to "Sign Up", new_user_registration_path %></li>
                </ul>
            </li>
          <% end %> <!-- end of if -->

        </ul> <!-- nav navbar-nav navbar-right -->
      </div> <!-- navbar-collapse -->
    </div> <!-- container-fluid -->
  </nav>
<!-- ~~~~ Nav Bar - End ~~~~ -->

	<%= yield %>
	</div>

</body>
</html>
