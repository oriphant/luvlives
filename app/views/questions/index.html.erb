<div class="container">
	<div class="col-md-8">
		<h1>Recent Questions</h1>

		<% @questions.each do |question| %>
			<div class="media">
	      <div class="media-body">
	        <h4 class="media-heading">
		  			<p><%= link_to question.title, question_path(question.id) %></p>
		  			 <%question.increment%> <!-- View counter -->
		  			<hr/>
		  		</h4>

		  		<!-- Answer Loop - Start -->
		  		<% if question.answers.exists? %>
 				  <%= render question.answers.first %>
 				  <% end %>
	        <!-- Answer Loop - End -->

		        <div class="container">
			        <div class="row">
				        <%= button_to "Answer Question", new_question_answer_path(question.id), method: :get, class: 'btn btn-default btn-xs' %>
				        <small><%= question.answers.count %> Answers</small>
			      	</div> <!-- row -->
	      	</div><!-- containter -->
	      </div> <!-- Media Body -->
	   	</div> <!-- Media -->
		<% end %> <!-- Question Loop -->
	</div> <!-- col-md-8 -->
</div> <!-- containter -->
