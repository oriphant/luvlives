<div class="row">
  <div class="col-md-8">
  <h1>Edit My Question</h1>

   <%= form_for @question do |f| %>
     <div class="form-group">
       <%= f.label "Edit Question" %>
       <%= f.text_field :title, class: 'form-control', placeholder: "Edit main question" %>
     </div>

     <div class="form-group">
       <%= f.label "Edit Question Detail" %>
       <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Edit Question Detail" %>
     </div>
     <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-primary' %>
     </div>
   <% end %>
  </div>
</div>
