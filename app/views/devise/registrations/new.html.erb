<div class="row">
  <div class="col-md-8">
    <h1>Welcome to LuvLives</h1>
    <h4>Relationship advice from the community.</h4>

    <!-- OmniAuth Sign-ins - Start -->
    <div> 
      <%= link_to '<i class="fa fa-facebook-square"></i> Sign up - Facebook'.html_safe, user_omniauth_authorize_path(:facebook) %>
    </div>
    <div>
      <%= link_to '<i class="fa fa-google"></i> Sign up - Google'.html_safe, user_omniauth_authorize_path(:google_oauth2) %>
    </div>
    <div>
      <%= link_to '<i class="fa fa-linkedin"></i> Sign up - Linked-In'.html_safe,user_omniauth_authorize_path(:linkedin) %>
    </div>
    <hr/>
    <!-- OmniAuth Sign-ins - End -->
    <h4>Sign up with Email.</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "off", autofocus: true, class: 'form-control', placeholder: "Enter name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "off", class: 'form-control', placeholder: "Enter email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Enter password confirmation" %>
      </div>

      <div class="form-group">
        <%= f.label "Profile Picture" %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>

      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>