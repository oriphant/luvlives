

<div class="row">
  <div class="col-md-8">
    <h1>Welcome to LuvLives</h1>
    <h4>Relationship advice from the community.</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "off", autofocus: true, class: 'form-control', placeholder: "Enter name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "off", class: 'form-control', placeholder: "Enter email" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter password" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Enter password confirmation" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>

      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
      <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
      <%= link_to "Sign in with Linkedin",user_omniauth_authorize_path(:linkedin) %>
      
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>