<div class="row">
  <div class="col-md-8">
		<h1>Write An Answer</h1>

		<%= form_for [@question, @answer] do |f| %>
			<div class="form-group">
			  <%= f.label "Write your answer" %>
			  <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Additional Detail" %>
		 	</div>
	
			<div class="form-group">
				<%= render partial: 'labels/form', locals: { f: f, answer: @answer, labels: @answer.labels %>
			</div>

		 	<div class="form-group">
		  	<%= f.submit "Save", class: 'btn btn-primary' %>
		  </div>
		<% end %>
	</div> <!-- col-md-8 -->
</div> <!-- row -->