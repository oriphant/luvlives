<!-- ~~~~~~~~~~ -->
 <div>
 	
  <div><%= link_to  " ", vote_question_answer_path('questions', 'question_id', 'answers', ':id',  vote: true), method: 'post', class: 'glyphicon glyphicon-chevron-up' %></div>
  <div><strong><%= answer.votes.size %></strong></div>
   <div><%= link_to " ", vote_question_answer_path('questions', 'question_id', 'answers', ':id', vote: false), method: 'post', class: 'glyphicon glyphicon-chevron-down' %></div>
 </div>
<!-- ~~~~~~~ -->
<small>
	<% if answer.user.avatar? %>
		<%= image_tag(answer.user.avatar.profile.url, :class => "circle") %>
 		Written <%= time_ago_in_words(answer.created_at) %> ago.
 	<% else %>
 		<%= image_tag("user-profile-size-pic.png", :class => "circle") %>
 		Written <%= time_ago_in_words(answer.created_at) %> ago.
 	<% end %>
</small>

<h4><%= answer.user.name %></h4>

<p>
  <%= answer.body %>
</p> 

<% if current_user.present? && current_user.id == answer.user_id%>
	<%= link_to 'Edit Answer', edit_question_answer_path(answer, :question_id => answer.question_id)%>
  <!-- answer is the 'a' that is passed from the each do in the index file.  Could have named answer anything -->
<%end%>
