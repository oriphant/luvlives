<div class="row">
<div class="col-md-8">
 <h1>Edit My Question</h1>
   <%= form_for [@question, @answer] do |f| %>
     
    <div class="form-group">
      <%= f.label "Edit your answer" %>
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Edit Question Detail" %>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-primary' %>
    </div>

   <% end %>
 </div>
</div>