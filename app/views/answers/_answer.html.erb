
<%= render partial: 'votes/voter', locals: { answer: answer} %>
<small class="pull-left">
	<% if answer.user.avatar? %>
		<%= image_tag(answer.user.avatar.profile.url, :class => "circle") %>
 		Written <%= time_ago_in_words(answer.created_at) %> ago.
 	<% else %>
 		<%= image_tag("user-profile-size-pic.png", :class => "circle") %> 		
 	<% end %>
</small>

<p class="answer-rightbox answer-name"><%= answer.user.name %></p>
<p class="answer-rightbox italic">Answer Views: <%= answer.views %></p>
<p class="answer-rightbox italic"><small>Written <%= time_ago_in_words(answer.created_at) %> ago </small></p>
<p class="answer-body"><%= answer.body %></p>

<% if current_user.present? && current_user.id == answer.user_id%>
	<%= link_to 'Edit Answer', edit_question_answer_path(answer, :question_id => answer.question_id)%>
<%end%>

<%answer.increment%> <!-- Views counter -->
